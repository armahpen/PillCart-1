# Backend Environment Variables for Render Deployment
# Copy this file to .env and fill in your actual values for local development

# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@host:port/database

# Node Environment
NODE_ENV=development

# Session Configuration (Optional - auto-generated if not set)
SESSION_SECRET=your_session_secret_here

# Stripe Configuration (Required for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Google Cloud Storage (Optional - for file uploads)
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_STORAGE_BUCKET=your_bucket_name
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Server Configuration
PORT=5000
FRONTEND_URL=https://your-netlify-site.netlify.app

# Add any other environment variables your backend needs